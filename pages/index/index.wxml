<!--index.wxml-->
<view>
  <import src="/pages/template/common.wxml" />
  <view class="swiper">
    <swiper indicator-dots="{{swiper.indicatorDots}}" autoplay="{{swiper.autoplay}}" interval="{{swiper.interval}}" duration="{{swiper.duration}}" circular="{{swiper.circular}}">
      <block wx:for="{{swiper.imgUrls}}" wx:key='3'>
        <swiper-item>
          <image src="{{item}}" class="slide-image" />
        </swiper-item>
      </block>
    </swiper>
  </view>
  <view class="message">
    <view class="mesTitle">今日下单</view> 
    <view class="mesSwiper">
      <swiper autoplay="{{mes.autoplay}}" interval="{{mes.interval}}" duration="{{mes.duration}}" circular="{{mes.circular}}">
        <block wx:for="{{mes.text}}" wx:key='3'>
          <swiper-item>
            {{item}}
          </swiper-item>
        </block>
      </swiper>
    </view>
  </view>
    
</view>