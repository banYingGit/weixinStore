/**index.wxss**/
@import '../template/common.wxss';

.swiper {
  width: 100%;
  height: 300rpx;
}

.slide-image {
  width: 100%;
  height: 300rpx;
}

.message {
  width: 94%;
  height: 70rpx;
  padding: 0 3%;
  border: solid 1rpx #eee;
  line-height: 70rpx;
  font-size: 24rpx;
}

.mesTitle {
  position: relative;
  display: block;
  float: left;
  width: 20%;
  text-align: center;
  color: #d61e1e;
}

.mesTitle:after {
  position: absolute;
  top: 15rpx;
  right: 0;
  width: 2rpx;
  height: 40rpx;
  background: #d61e1e;
  content: '';
}

.mesSwiper {
  display: block;
  float: left;
  width: 77%;
  padding-left:3%;
}
